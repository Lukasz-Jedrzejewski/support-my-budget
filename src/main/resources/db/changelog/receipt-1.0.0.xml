<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0-1" author="Lukasz Jedrzejewski">
        <createTable tableName="receipts">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="receipt_pk"
                             uniqueConstraintName="receipt_id_uq"/>
            </column>
            <column name="sum" type="DOUBLE">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="creation_date" type="timestamptz">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="update_date" type="timestamptz">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="removed" type="boolean">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>